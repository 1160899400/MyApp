<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@android:color/white">

    <GridLayout
        android:id="@+id/gl_job_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:orientation="horizontal"
        android:rowCount="5">

        <TextView
            style="@style/tv_screen_title"
            android:text="工作类型：" />

        <CheckBox
            android:id="@+id/ck_screen_job_type_all"
            style="@style/ck_screen_item"
            android:layout_column="0"
            android:layout_row="1"
            android:checked="true"
            android:text="全部" />

        <CheckBox
            android:id="@+id/ck_screen_job_type1"
            style="@style/ck_screen_item"
            android:layout_column="1"
            android:layout_row="1"
            android:text="调研" />

        <CheckBox
            android:id="@+id/ck_screen_job_type2"
            style="@style/ck_screen_item"
            android:layout_column="2"
            android:layout_row="1"
            android:text="送餐员" />

        <CheckBox
            android:id="@+id/ck_screen_job_type3"
            style="@style/ck_screen_item"
            android:layout_column="3"
            android:layout_row="1"
            android:text="促销" />

        <CheckBox
            android:id="@+id/ck_screen_job_type4"
            style="@style/ck_screen_item"
            android:layout_column="4"
            android:layout_row="1"
            android:text="礼仪" />

        <CheckBox
            android:id="@+id/ck_screen_job_type5"
            style="@style/ck_screen_item"
            android:layout_column="5"
            android:layout_row="1"
            android:text="安保" />

        <CheckBox
            android:id="@+id/ck_screen_job_type6"
            style="@style/ck_screen_item"
            android:layout_column="0"
            android:layout_row="2"
            android:text="销售" />

        <CheckBox
            android:id="@+id/ck_screen_job_type7"
            style="@style/ck_screen_item"
            android:layout_column="1"
            android:layout_row="2"
            android:text="服务员" />

        <CheckBox
            android:id="@+id/ck_screen_job_type8"
            style="@style/ck_screen_item"
            android:layout_column="2"
            android:layout_row="2"
            android:text="临时工" />

        <CheckBox
            android:id="@+id/ck_screen_job_type9"
            style="@style/ck_screen_item"
            android:layout_column="3"
            android:layout_row="2"
            android:text="校内" />

        <CheckBox
            android:id="@+id/ck_screen_job_type10"
            style="@style/ck_screen_item"
            android:layout_column="4"
            android:layout_row="2"
            android:text="设计" />

        <CheckBox
            android:id="@+id/ck_screen_job_type11"
            style="@style/ck_screen_item"
            android:layout_column="5"
            android:layout_row="2"
            android:text="文员" />

        <CheckBox
            android:id="@+id/ck_screen_job_type12"
            style="@style/ck_screen_item"
            android:layout_column="0"
            android:layout_row="3"
            android:text="派单" />

        <CheckBox
            android:id="@+id/ck_screen_job_type13"
            style="@style/ck_screen_item"
            android:layout_column="1"
            android:layout_row="3"
            android:text="家教" />

        <CheckBox
            android:id="@+id/ck_screen_job_type14"
            style="@style/ck_screen_item"
            android:layout_column="2"
            android:layout_row="3"
            android:text="演出" />

        <CheckBox
            android:id="@+id/ck_screen_job_type15"
            style="@style/ck_screen_item"
            android:layout_column="3"
            android:layout_row="3"
            android:text="客服" />

        <CheckBox
            android:id="@+id/ck_screen_job_type16"
            style="@style/ck_screen_item"
            android:layout_column="4"
            android:layout_row="3"
            android:text="翻译" />

        <CheckBox
            android:id="@+id/ck_screen_job_type17"
            style="@style/ck_screen_item"
            android:layout_column="5"
            android:layout_row="3"
            android:text="实习" />

        <CheckBox
            android:id="@+id/ck_screen_job_type18"
            style="@style/ck_screen_item"
            android:layout_column="0"
            android:layout_row="4"
            android:text="模特" />

        <CheckBox
            android:id="@+id/ck_screen_job_type19"
            style="@style/ck_screen_item"
            android:layout_column="1"
            android:layout_row="4"
            android:text="其他" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gl_job_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_job_type"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="2">

        <TextView
            style="@style/tv_screen_title"
            android:text="性别要求:" />

        <CheckBox
            android:id="@+id/ck_screen_job_gender_all"
            style="@style/ck_screen_item"
            android:layout_column="0"
            android:layout_row="1"
            android:checked="true"
            android:text="不限" />

        <CheckBox
            android:id="@+id/ck_screen_job_gender_man"
            style="@style/ck_screen_item"
            android:layout_column="1"
            android:layout_row="1"
            android:text="仅限男生" />

        <CheckBox
            android:id="@+id/ck_screen_job_gender_woman"
            style="@style/ck_screen_item"
            android:layout_column="2"
            android:layout_row="1"
            android:text="仅限女生" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gl_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_job_gender"
        android:columnCount="6"
        android:orientation="horizontal"
        android:rowCount="2">

        <TextView
            style="@style/tv_screen_title"
            android:text="支付方式:" />
        <CheckBox
            android:id="@+id/ck_screen_pay_type_all"
            style="@style/ck_screen_item"
            android:layout_column="0"
            android:layout_row="1"
            android:checked="true"
            android:text="不限"/>
        <CheckBox
            android:id="@+id/ck_screen_pay_type_day"
            style="@style/ck_screen_item"
            android:layout_column="1"
            android:layout_row="1"
            android:text="日结"/>
        <CheckBox
            android:id="@+id/ck_screen_pay_type_week"
            style="@style/ck_screen_item"
            android:layout_column="2"
            android:layout_row="1"
            android:text="周结"/>
        <CheckBox
            android:id="@+id/ck_screen_pay_type_half_month"
            style="@style/ck_screen_item"
            android:layout_column="3"
            android:layout_row="1"
            android:text="半月结"/>
        <CheckBox
            android:id="@+id/ck_screen_pay_type_month"
            style="@style/ck_screen_item"
            android:layout_column="4"
            android:layout_row="1"
            android:text="月结"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_pay_type"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_reset_screen"
            style="@style/nav_btn1"
            android:layout_weight="1"
            android:text="重置"/>
        <Button
            android:id="@+id/btn_start_screen"
            android:layout_width="match_parent"
            style="@style/nav_btn2"
            android:layout_weight="1"
            android:text="确定"/>
    </LinearLayout>
</RelativeLayout>
