<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/white"
    android:minHeight="60dp">

    <RelativeLayout
        android:id="@+id/rl_jobName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/job_name"
            style="@style/list_view_tv_style"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/job_distance"
            style="@style/list_view_tv_style"
            android:layout_below="@+id/job_name"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/job_place"
            style="@style/list_view_tv_style"
            android:layout_below="@+id/job_name"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/job_salary"
        style="@style/list_view_tv_style"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_jobName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/job_work_time"
        style="@style/list_view_tv_style"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/job_salary"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp" />

</RelativeLayout>